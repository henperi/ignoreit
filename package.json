{
	"name": "ignore_it",
	"displayName": "ignore_it",
	"description": "automatically ignore files and folders",
	"version": "1.0.0",
	"publisher": "marcdomain",
	"author": "Marcus Chukwuoma <marcus2cu@gmail.com> (https://github.com/marcdomain)",
	"engines": {
		"vscode": "^1.42.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/marcdomain/ignore_it.git"
	},
	"bugs": {
		"url": "https://github.com/marcdomain/ignore_it.git/issues"
	},
	"homepage": "https://github.com/marcdomain/ignore_it.git#readme",
	"icon": "./assets/ignore_it.png",
	"license": "MIT",
	"keywords": [
		".gitignore",
		"ignore",
		"file",
		"folder",
		"symlink",
		".env",
		".env.example"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.ignore_it",
				"title": "ignore_it: auto ignore files and folders"
			}
		],
		"keybindings": [
			{
				"command": "extension.ignore_it",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "editorFocus"
			},
			{
				"command": "extension.ignore_it",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "explorerViewletVisible"
			},
			{
				"command": "extension.ignore_it",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "terminalIsOpen"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ignore_it: Example Configuration",
			"ignore_it.array": {
				"type": "array",
				"default": [".env", "node_modules", "coverage"],
				"description": "Array of strings of files or folders to be ignored"
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
